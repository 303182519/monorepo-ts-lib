{
  "useWorkspaces": true,
  "version": "1.0.2",
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true,
      "ignoreChanges": [
        "*.md"
      ],
      "verifyAccess": false,
      "verifyRegistry": false,
      "conventionalCommits": true,
      "message": "chore: publish"
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  }
}
